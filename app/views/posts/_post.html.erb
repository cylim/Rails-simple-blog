<%= post.created_at.strftime("%d %b %y") %><br/>
 <h2><%= link_to_unless_current post.title, post %></h2>
 <h3> Posted by: <%= post.author_name %></h3>
 

 <% if controller.action_name == "show" %>
 	<%= post.content.html_safe %>
<% else %>
	<div>
	<% post.body.lines.first(5).each do |line| %>
		<%= line.html_safe %>
	<% end %>
	<% if post.body.lines.length >= 5 %>
		<%= link_to_unless_current '... ...', post %><br/>
	<% end %>
	</div>
	<br/>
	<br/>
<% end %>


